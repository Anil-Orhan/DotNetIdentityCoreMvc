@using Microsoft.AspNetCore.Identity
@using TomyaTask.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link btn btn-link text-dark" asp-area="Identity" asp-page=""  style="width: fit-content;" title="Manage">Aktif Kullanıcı :
                @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
           >
                <button  id="logout" type="submit" style="padding: 0px; width: fit-content" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item ">
            <a class="nav-link text-dark " id="register" asp-area="Identity" asp-page="/Account/Register">  Kayıt Ol</a>
        </li>
        <li class="nav-item ">
           
            <a class="nav-link text-dark " id="login" asp-area="Identity" asp-page="/Account/Login">  Giriş Yap</a>
        </li>
    }
</ul>
